{
    "name": "phpmd/phpmd",
    "description": "Official version of PHPMD handled with Composer.",
    "license": "BSD-3-Clause",

    "minimum-stability" : "stable",

    "require": {
        "php": ">=5.3.0",
        "pdepend/pdepend": "2.0.*",

        "symfony/dependency-injection": "@stable",
        "symfony/filesystem": "@stable",
        "symfony/config": "@stable"
    },

    "autoload": {
        "psr-0": {
            "PHPMD\\": "src/main/php",
        }
    },

    "bin": ["src/bin/phpmd"]
}
